%header
  - unless current_user
    .dark-header
      %nav.navbar.navbar-inverse.navbar-fixed-top
        .container-fluid
          .row
            .col-md-12
              .navbar-header
                %button.navbar-toggle.collapsed{type: "button", data: {toggle: "collapse", target: "#navbar-collapse"}}
                  %span.sr-only
                    = t("layouts.header.toggle_navigation")
                  %span.icon-bar
                  %span.icon-bar
                  %span.icon-bar
                = link_to "E-learn Portal", root_path, class: "navbar-brand"

              .collapse.navbar-collapse#navbar-collapse
                = render "layouts/header_not_connected"
