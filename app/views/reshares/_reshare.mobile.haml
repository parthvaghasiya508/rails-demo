.reshare
  - if post
    .nsfw-hidden
      = render "shared/photo_area", post: post

    .content
      = render "shared/post_info", post: post

    - unless post.is_a?(Reshare)
      = render "shared/nsfw_shield", post: post

      .nsfw-hidden
        = render "status_messages/status_message", post: post, photos: post.photos
  - else
    .content
      = t(".deleted")

  .reshare_via
    %span
      = t(".reshared_via")
